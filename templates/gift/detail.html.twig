{% extends 'base.html.twig' %}

{% block main %}
  <section>
    <div class="container">
      <div class="d-flex justify-content-between align-items-center p-2">
        <a href="{{ path('app_gift') }}" class="w-auto px-3 py-2 text-center text-dark">Retour</a>
        <a href="{{ path('app_gift_add_to_letter', {'slug': gift.slug}) }}" class="CTA w-auto fw-bold px-5 py-2 text-secondary text-center">Ajouter à ma liste</a>
      </div>
    </div>
  </section>

  <section class="py-5">
    <div class="container">
      <div class="row">
        <h2 class="glow">{{ gift.name }}</h2>
        <img class="col-12 my-5 md-md-0 col-md-6" src="{{ asset('/uploads/reindeers/0c783d4036aabf5952329468830bd63b.png') }}" alt="photo de {{ gift.name }}" />
        {% for image in gift.getImages %}
          <img src="{{ asset('uploads/images/' ~ image.file_name) }}" alt="{{ gift.name }}" class="img-responsive" />
        {% endfor %}
        <div class="col-12 col-md-6 px-3 p-md-5">
          <p class="my-0">
            <span class="fw-bold">Âge conseillé</span> : {{ gift.age }} ans
          </p>
          <p class="my-0">
            <span class="fw-bold">Catégorie</span> : {{ gift.category|capitalize }}
          </p>
          <p class="my-0">
            <span class="fw-bold">Description</span> : <br />
            {{ gift.description|capitalize }}
          </p>
        </div>
      </div>
    </div>
  </section>
{% endblock %}
