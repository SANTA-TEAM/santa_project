<div class="d-flex justify-content-between align-items-center my-2">
  <h3>{{ gift.name }}</h3>

  <img src="{{ asset('uploads/gifts' ~ gift.images|first) }}" alt="photo du cadeau {{ gift.name }}" />
  {% for image in gift.Images %}
    <img class="col-12 my-5 md-md-0 col-md-6" src="{{ asset('uploads/gifts/' ~ image.fileName) }}" alt="photo de {{ gift.name }}" />

  {% endfor %}

  <button type="button" id="{{ gift.id }}" class="remove-gift btn btn-danger mx-2">Supprimer de ma lettre</button>
</div>
