{% extends 'base.html.twig' %}

{% block main %}
  <section>
    <div class="container">
      <div class="d-flex justify-content-between align-items-center p-2">
        <a href="{{ path('app_gift') }}" class="w-auto px-3 py-2 text-center text-white fw-bold">Retour</a>
        <a href="{{ path('app_gift_add_to_letter', { slug: gift.slug }) }}" class="CTA w-auto fw-bold px-5 py-2 text-secondary text-center">Ajouter à ma liste</a>
      </div>
    </div>
  </section>

  <section class="py-5">
    <div class="container">
      <div class="row">
        <h2 class="shadow mb-5 fs-1">{{ gift.name }}</h2>

        {% if gift.images is not empty %}
          <img class="col-12 my-5 md-md-0 col-md-6 object-fit-cover" src="{{ asset('/uploads/gifts/' ~ (gift.images|first)) }}" alt="photo de {{ gift.name }}" />
        {% else %}
          <img class="col-12 my-5 md-md-0 col-md-6 object-fit-cover" src="{{ asset('/assets/images/x-masGift.jpeg') }}" alt="image par défaut de cadeau" />
        {% endif %}
        <div class="col-12 col-md-6 px-3 my-5 p-md-5 bg-white bg-opacity-75">
          <p class="my-0">
            <span class="fw-bold">Âge conseillé</span> : {{ gift.age }} ans
          </p>
          <p class="my-0">
            <span class="fw-bold">Catégorie</span> : {{ gift.category|capitalize }}
          </p>
          <p class="my-0">
            <span class="fw-bold">Description</span> : <br />
            {{ gift.description|capitalize }}
          </p>
        </div>
      </div>
    </div>
  </section>
{% endblock %}
